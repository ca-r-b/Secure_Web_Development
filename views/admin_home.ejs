<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ITSECWB -
        <%= title %>
    </title>
    <!-- CSS -->
    <link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="/js/idleTimeout.js"></script>
</head>

<%- include("partials/navbar") -%>

    <body class="mainBody">

        <div class="mainContainer" style="text-align: center;">
            <h1>
                <%= title %>
            </h1>
        </div>
        <%- include("partials/user-card") -%>

            <hr>
            <!-- Corrected this line -->

            <div class="mainContainer">
                <% users.forEach(user => { %>

                    <div class="postContainer">
                        <div class="flex-row">
                            <img width="60" height="60" src="<%= user.picPath %>" />
                            <!-- Corrected this line -->

                            <div class="postContent">
                                <br>
                                <!-- Corrected tag -->
                                <span style="font-weight: bold;">Name:</span>
                                <%= user.firstName %>
                                    <%= user.lastName %> <br>

                                        <span style="font-weight: bold;">ID Number:</span>
                                        <%= user.idNumber %> <br>

                                            <span style="font-weight: bold;">User Type:</span>
                                            <%= user.userType %> <br>

                                                <span style="font-weight: bold;">Phone Number:</span>
                                                <%= user.phoneNum %> <br>
                            </div>
                        </div>

                        <a href="/delete-user/<%= user.id %>" style="text-decoration:none;">
                            <div class="button-1">
                                <i class="fa fa-trash"></i>
                            </div>
                        </a>

                    </div>
                    <% }); %>
            </div>

    </body>

</html>